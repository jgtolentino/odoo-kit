{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Platform Kit Secrets Schema",
  "description": "Defines required and optional secrets for Platform Kit ecosystem",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "SUPABASE_URL": {
      "type": "string",
      "minLength": 8,
      "description": "Supabase project URL"
    },
    "SUPABASE_SERVICE_ROLE_KEY": {
      "type": "string",
      "minLength": 20,
      "description": "Supabase service role key (server-side only)"
    },
    "SUPABASE_ACCESS_TOKEN": {
      "type": "string",
      "description": "Supabase CLI access token for deployments"
    },
    "SUPABASE_PROJECT_REF": {
      "type": "string",
      "description": "Supabase project reference ID"
    },
    "SUPABASE_DB_URL": {
      "type": "string",
      "description": "Direct PostgreSQL connection string"
    },
    "GITHUB_TOKEN": {
      "type": "string",
      "minLength": 10,
      "description": "GitHub fine-grained PAT or App installation token"
    },
    "N8N_BASE_URL": {
      "type": "string",
      "description": "n8n instance base URL"
    },
    "N8N_API_KEY": {
      "type": "string",
      "description": "n8n API key for workflow automation"
    },
    "MCP_BASE_URL": {
      "type": "string",
      "description": "MCP Hub / Pulser base URL"
    },
    "MCP_API_KEY": {
      "type": "string",
      "description": "MCP Hub API key"
    },
    "PLANE_BASE_URL": {
      "type": "string",
      "description": "Plane API base URL"
    },
    "PLANE_API_TOKEN": {
      "type": "string",
      "description": "Plane API token"
    },
    "PLANE_WORKSPACE_SLUG": {
      "type": "string",
      "description": "Default Plane workspace slug"
    },
    "PLANE_PROJECT_ID": {
      "type": "string",
      "description": "Default Plane project ID"
    },
    "MAILGUN_DOMAIN": {
      "type": "string",
      "description": "Mailgun sending domain"
    },
    "MAILGUN_API_KEY": {
      "type": "string",
      "description": "Mailgun API key"
    },
    "MAILGUN_WEBHOOK_SIGNING_KEY": {
      "type": "string",
      "description": "Mailgun webhook signature verification key"
    },
    "SLACK_BOT_TOKEN": {
      "type": "string",
      "description": "Slack Bot OAuth token"
    },
    "SLACK_WEBHOOK_URL": {
      "type": "string",
      "description": "Slack Incoming Webhook URL"
    },
    "SLACK_SIGNING_SECRET": {
      "type": "string",
      "description": "Slack request signing secret"
    },
    "SHELF_API_KEY": {
      "type": "string",
      "description": "Shelf.nu API key"
    },
    "ATOMIC_CRM_API_KEY": {
      "type": "string",
      "description": "Atomic CRM API key"
    },
    "ODOO_BASE_URL": {
      "type": "string",
      "description": "Odoo instance base URL"
    },
    "ODOO_API_KEY": {
      "type": "string",
      "description": "Odoo API key (preferred over user/pass)"
    },
    "SCRAPE_USER_AGENT": {
      "type": "string",
      "description": "Custom User-Agent for web scraping"
    },
    "HTTP_PROXY": {
      "type": "string",
      "description": "HTTP proxy URL"
    },
    "HTTPS_PROXY": {
      "type": "string",
      "description": "HTTPS proxy URL"
    },
    "SENTRY_DSN": {
      "type": "string",
      "description": "Sentry error tracking DSN"
    },
    "POSTHOG_API_KEY": {
      "type": "string",
      "description": "PostHog analytics API key"
    }
  },
  "required": [
    "SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY",
    "GITHUB_TOKEN",
    "N8N_BASE_URL",
    "N8N_API_KEY",
    "MCP_BASE_URL",
    "MCP_API_KEY",
    "PLANE_BASE_URL",
    "PLANE_API_TOKEN",
    "MAILGUN_DOMAIN",
    "MAILGUN_API_KEY",
    "MAILGUN_WEBHOOK_SIGNING_KEY",
    "SHELF_API_KEY",
    "ATOMIC_CRM_API_KEY"
  ]
}
